root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.csproj]
indent_size = 2

[*.sln]
charset = utf-8-bom
end_of_line = crlf
indent_size = 4

[*.y{a,}ml]
indent_size = 2

[*.{md,txt}]
trim_trailing_whitespace = false